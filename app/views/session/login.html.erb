<article class="container">
  <div class="card">
    <nav class="menu">
      <%= link_to t('.login') %>
      <%= link_to t('.register-nav') %>
    </nav>
    <hr id='line'>
    <div class="container-card">
      <%= image_tag("Frame.svg") %>
      <div class="form-card">
        <h1><%=t('.title')%></h1>
        <%= form_with url:login_path, method: :post do |form| %>
        <section class='center-form-content'>
          <%= form.label :email ,t('.email'), {class: 'form-label'}%>
          <%= form.email_field :email,value: params[:email] %>
        </section>
        <section class='center-form-content'>
          <%= form.label :password ,t('.password'), {class: 'form-label'}%>
          <%= form.password_field :password,value: params[:password] %>
        </section>
        <section class='remember-me'>
          <%= form.check_box :remember_me, class: 'remember-me' %>
          <%= form.label :remember_me, t('.remember-me'),  class: 'remember-me-label' %>
        </section>
        <section class= 'center-form-content'>
          <%= form.submit :value => t('.sign-in'),class:'signin-button' %>
          <%= link_to t('.recover-password'), '/#' , class: 'recover-password' %>
          <section class='signin-button-google'>
            <%= image_tag("google.svg")%>
            <%= link_to t('.google-login'), '/' %>
          </section>
        </section>
        <% end %>
        </div>
      </div>
    </div>
</article>