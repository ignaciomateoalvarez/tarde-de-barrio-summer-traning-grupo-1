<article class="container">
  <div class="card">
    <nav class="menu">
      <%= link_to t('login') %>
      <%= link_to t('.sign-up') %>
    </nav>
    <hr id='line'>
    <div class="container-card">
      <div class="imag-card">
        <%= image_tag("Frame.svg", class: 'imag-size') %>
      </div>
      <div class="form-card">
        <h1><%=t('.title_form')%><h1>
        <%= form_with url:'/login', method: :post do |form| %>
          <div class='center-form-content'>
            <%= form.label :email ,t('.email') {class: 'form-label'}%>
            <%= form.email_field :email,value: params[:email] %>
          </div>
          <div class='center-form-content'>
            <%= form.label :password ,t('.password') {class: 'form-label'}%>
            <%= form.password_field :password,value: params[:password] %>
          </div>
          <div class='remember-me'>
            <%= form.check_box :remember_me, t('.remember_me'), class:'remember-me' %>
            <%= form.label :remember_me, t('.remember_me'), class:'remember-me-label' %>
          </div>
          <div class= 'center-form-content'>
            <%= form.submit value: t('.sign_in'), class:'signin-button' %>
            <%= link_to t('recoverd_password'), '/' , class: 'recover-password' %>
            <%= button_to t(.'register_google'), '/' , {class:'signin-button-google'}  %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</article>