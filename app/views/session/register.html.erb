<article class="container">
  <div class="card">
    <nav class="menu">
      <%= link_to t('.login') %>
      <%= link_to t('.register-nav') %>
    </nav>
    <hr id='line'>
    <div class="container-card">
      <%= image_tag("Frame.svg")%>
      <div class="form-card">
        <h1><%=t('.title')%></h1>
        <%= form_with(model: @user) do |form| %>
        <section class='center-form-content'>
          <%= form.label :user_name ,t('.name-user'), {class: 'form-label'} %>
          <%= form.text_field :user_name,value: params[:user_name] %>
        </section>
        <section class='center-form-content'>
          <%= form.label :email ,t('.email'), {class: 'form-label'}%>
          <%= form.email_field :email,value: params[:email] %>
        </section>
        <section class='center-form-content'>
          <%= form.label :password ,t('.password'), {class: 'form-label'}%>
          <%= form.password_field :password,value: params[:password] %>
        </section>
        <section class='center-form-content'>
          <%= form.label :confirm_password ,t('.confirm-password'), {class: 'form-label'}%>
          <%= form.password_field :confirm_password,value: params[:confirm_password] %>
        </section>
        <section class= 'center-form-content'>
          <%= form.submit :value => t('.register-button'), class:'signin-button' %>
          <section class='signin-button-google'>
            <%= image_tag("google.svg")%>
            <%= link_to t('.google-login'), '/' %>
          </section>
        </section>
        <% end %>
        </div>
      </div>
    </div>
</article>