<%= render "navbar/nav" %>
<div class="index-container"> 
<section class="student-nav-container">
  <div class='student-button-filter'>
    <%= form_with(url: students_path, method: :get, scope: :user_filter) do |f| %> 
    <%= f.text_field :full_name , class: "filter"%>
    <% end %>
  </div>
  <div class="student-magnifying-glass">
    <%= image_submit_tag("magnifying-glass-solid.svg")%>
  </div>
  <div class="student-new-student">
    <%= link_to t('.new-student'), new_student_path(), method: :get, data: { turbo_frame: 'modal' } %>
  </div>
</section>
<table class='student-table-container'>
    <tr class='student-th'>
      <th><%=t('.students')%></th>
      <th><%=t('.age')%></th>
      <th><%=t('.school_level')%></th>
      <th><%=t('.study')%></th>    
      <th></th>
      <th></th>
    </tr>
    <% @presenter.decorated_students.each do |student| %>
      <tr class='student-td'>
        <td><%= link_to student.full_name, student_path(student.id)%></td>
        <td><%= student.calculate_age %></td>
        <td><%= student.school_level %></td>
        <td><%= student.status_school %></td>
        <td><%= button_to edit_student_path(student), method: :get, data: { turbo_frame: 'modal' } do%>
            <%= image_tag( "pen-solid.svg", class: 'student-pen-icon') %>
            <% end %></td>
      </tr>
    <% end %>
</table>
<div class='student-pagination'>
  <%== pagy_nav(@pagy) %>
</div>
</div>
